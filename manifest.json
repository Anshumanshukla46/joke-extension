{
    "manifest_version": 3,
    "name": "Tell Me a Joke",
    "version": "0.0.1",
    "description": "On clicking the extension it will show a random joke generated by an api.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "logo.png"
    },
    "icons": {
        "128": "logo.png"
    },
    "permissions": [
        "activeTab"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "styles.css"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        },
        {
            "resources": [
                "script.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ]
}